<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiChart"
             x:Class="MauiChart.MainPage">

    
    <TableView Intent="Menu">
        <TableRoot>
            <TableSection Title="">
                <TextCell Text="Draw: Line Page using GraphicsView. The Canvas is passed in as parameter to the Draw() function in the code behind"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:ChatDrawPage }" />
                
                <TextCell Text="Shape: Line Page using xaml controls"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:LineSample }" />
            </TableSection>
        </TableRoot>
    </TableView>

</ContentPage>
